{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "dotnet",
      "args": ["build", "${workspaceFolder}/MTGCollectionTracker.sln"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$msCompile",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "dotnet",
      "args": ["clean", "${workspaceFolder}/MTGCollectionTracker.sln"],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "restore",
      "type": "shell",
      "command": "dotnet",
      "args": ["restore", "${workspaceFolder}/MTGCollectionTracker.sln"],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "test",
      "type": "shell",
      "command": "dotnet",
      "args": ["test", "${workspaceFolder}/MTGCollectionTracker.sln"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "backend-watch",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/src/backend/MTGCollectionTracker.Api/MTGCollectionTracker.Api.csproj",
        "--launch-profile",
        "https"
      ],
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^$",
          "file": 1,
          "line": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*dotnet watch.*$",
          "endsPattern": "^.*Now listening on.*$"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "group": "dev-servers"
      }
    },
    {
      "label": "frontend-watch",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/src/frontend/MTGCollectionTracker.Client/MTGCollectionTracker.Client.csproj",
        "--launch-profile",
        "https"
      ],
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^$",
          "file": 1,
          "line": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*dotnet watch.*$",
          "endsPattern": "^.*Now listening on.*$"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "group": "dev-servers"
      }
    },
    {
      "label": "start-full-stack",
      "dependsOn": ["backend-watch", "frontend-watch"],
      "dependsOrder": "parallel",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    }
  ]
}
