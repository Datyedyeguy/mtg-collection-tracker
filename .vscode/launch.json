{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend API",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/src/backend/MTGCollectionTracker.Api/bin/Debug/net10.0/MTGCollectionTracker.Api.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/backend/MTGCollectionTracker.Api",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "https://localhost:5001;http://localhost:5000"
      },
      "console": "integratedTerminal"
    },
    {
      "name": "Frontend (Blazor)",
      "type": "blazorwasm",
      "request": "launch",
      "cwd": "${workspaceFolder}/src/frontend/MTGCollectionTracker.Client",
      "url": "https://localhost:5002",
      "browser": "edge"
    }
  ],
  "compounds": [
    {
      "name": "Full Stack (API + Frontend)",
      "configurations": ["Backend API", "Frontend (Blazor)"],
      "stopAll": true
    }
  ]
}
